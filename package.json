{
  "name": "react-node-polling-app",
  "version": "1.0.0",
  "scripts": {
    "client": "cd client && yarn start",
    "server": "nodemon server.js",
    "start": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "heroku-postbuild": "cd client && yarn --production=false && yarn build"
  },
  "engines": {
    "node": "^9.6.0",
    "yarn": "1.5.1"
  },
  "dependencies": {
    "dotenv": "^5.0.1",
    "express": "^4.16.2",
    "lodash": "^4.17.10",
    "socket.io": "^2.1.0"
  },
  "devDependencies": {
    "concurrently": "^3.5.0"
  },
  "license": "MIT"
}
